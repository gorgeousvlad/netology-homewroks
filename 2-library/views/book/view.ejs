<%- include("../partials/layout-start", {title: title}) %>
<%- include("../partials/menu") %>
<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.description %>.</p>
                <h6>Book Info</h6>
                <div>
                    <p class="card-text">Authors: <%= book.authors %>.</p>
                    <p class="card-text">Cover: <%= book.fileCover %>.</p>
                    <p class="card-text">FileName: <%= book.fileName %>.</p>
                    <p class="card-text">Favorites: <%= book.favorite%>.</p>
                </div>
                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include("../partials/layout-end") %>
